<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="CHANGEME" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
   <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
   </arrivalphase>
<!--
   <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
   </arrivalphase>
-->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="50" type="ts_http">
      <!-- this type of user doesn't log in and just checks out a few stocks -->

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is admiring site -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the sentiment form, as a user would do.-->
      <request>
        <http url='/sentiment' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is picking a stock -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Query for FB sentiment.  -->
      <request>
        <http url='/sentiment?symbol=FB' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for AAPL sentiment.  -->
      <request>
        <http url='/sentiment?symbol=AAPL' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for GOOGL sentiment.  -->
      <request>
        <http url='/sentiment?symbol=GOOGL' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for TSLA sentiment.  -->
      <request>
        <http url='/sentiment?symbol=TSLA' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- visit the stock data form, as a user would do.-->
      <request>
        <http url='/stocks' version='1.1' method='GET'></http>
      </request>

      <!-- Query for FB stock data.  -->
      <request>
        <http url='/stocks?symbol=FB' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for AAPL stock data.  -->
      <request>
        <http url='/stocks?symbol=AAPL' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for GOOGL stock data.  -->
      <request>
        <http url='/stocks?symbol=GOOGL' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>

      <!-- Query for TSLA stock data.  -->
      <request>
        <http url='/stocks?symbol=TSLA' version='1.1' method='GET'></http>
      </request>

      <thinktime value="10" random="true"></thinktime>
    </session>

    <session name="http-example1" probability="50" type="ts_http">
      <!-- this user becomes a new member and favorites -->

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 5 seconds, user is enjoying the music -->
      <thinktime value="5" random="true"></thinktime>

      <!-- User wants to make an account so they can listen to more great music. -->
      <request>
        <dyn_variable name="login_token" ></dyn_variable>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>

      <!-- create a random number to make a unique email address -->
      <setdynvars sourcetype="random_number" start="10" end="99999">
        <var name="random_email_number" />
      </setdynvars>

      <request subst="true">
        <http url='/users'
              version='1.1'
              method='POST'
              contents='authenticity_token=%%_login_token%%&amp;user[email]=user%%_random_email_number%%@gmail.com&amp;user[password]=password&amp;user[password_confirmation]=password&amp;commit=Sign+up'></http>
      </request>

      <!-- visit the favorites page , as a new user would do. -->
      <request>
        <http url='/favorite' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is figuring out favorites page -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Search for YHOO -->
      <request>
        <http url='/favorite?symbol=YHOO' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- User searches for GOOG  -->
      <request>
        <http url='/favorite?symbol=GOOG' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- user decides to favorite GOOG -->
      <request>
        <dyn_variable name="first_favorite_token" ></dyn_variable>
        <http url='/favorite' version='1.1' method='GET'></http>
      </request>

      <request>
        <http url='/favorite/create/126' version='1.1' method='POST'
              contents='authenticity_token=%%_first_favorite_token%%'></http>
      </request>

      <!-- Query for INTL stock data.  -->
      <request>
        <http url='/favorite?symbol=INTL' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- Query for FORD stock data.  -->
      <request>
        <http url='/favorite?symbol=FORD' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- user decides to favorite FORD -->
      <request>
        <dyn_variable name="second_favorite_token" ></dyn_variable>
        <http url='/favorite' version='1.1' method='GET'></http>
      </request>

      <request>
        <http url='/favorite/create/1161' version='1.1' method='POST'
              contents='authenticity_token=%%_second_favorite_token%%'></http>
      </request>

      <!-- User logs out -->
      <request>
        <dyn_variable name="logout_token" ></dyn_variable>
        <http url='/users/' version='1.1' method='GET'></http>
      </request>

      <request subst="true">
        <http url='/users/sign_out'
              version='1.1'
              method='POST'
              contents='authenticity_token=%%_logout_token%%'>
        </http>
      </request>
    </session>
  </sessions>
</tsung>
