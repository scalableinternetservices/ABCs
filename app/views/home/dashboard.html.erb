configGood.textColor = "#0E5144";
configGood.waveTextColor = "#6DA398";
configGood.waveColor = "#246D5F";

<% if @symbol_rating %>
  <% if @symbol_rating < 33 %>
    loadLiquidFillGauge("sentimentGraph", <%= @symbol_rating =%>, configBad);
